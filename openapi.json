                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Review created successfully"
                    },
                    "data": {
                      "$ref": "#/components/schemas/Review"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Validation error"
          },
          "403": {
            "description": "Only User, Librarian, or Admin can create reviews"
          }
        }
      }
    },
